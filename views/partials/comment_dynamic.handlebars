<article class="comment" data-comment-id="{{comment_id}}" data-comment-depth="{{depth}}">
    <header>
        <img alt="Profile image of @{{username}}" class="author-image" src="https://sweet-images.s3.eu-west-2.amazonaws.com/{{image}}" />
        <div class="comment-header-container">
            <h3 class="author-name">
                {{{name}}}
            </h3>
            <div class="comment-header-divider">
                &middot;
            </div>
            <aside class="timestamp">
                {{timestamp}}
            </aside>
        </div>
    </header>
    {{#if content}}
        <section class="content">
            {{{content}}}
        </section>
    {{/if}}
    <footer class="toolbar">
        {{#gt depth 4}}{{else}}
        <button type="button" class="button comment-toolbar-button reply-to-comment">
            Reply
        </button>
        {{/gt}}
        <button type="button" class="button comment-toolbar-button delete-comment" id="{{comment_id}}" data-post-id="{{post_id}}" data-comment-id="{{comment_id}}">
            Delete
        </button>
    </footer>
    <section class="replies">
    </section>
</article>
